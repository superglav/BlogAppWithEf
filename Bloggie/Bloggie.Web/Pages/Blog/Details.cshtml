@page "/blog/{urlHandle}"
@model Bloggie.Web.Pages.Blog.DetailsModel
@{
    ViewData["Title"] = Model.BlogpPost.PageTitle;
}

<div class="container my-5">
    <div class="row justify-content-center">
        <div class="col-12 col-lg-6">
            @if (Model.BlogpPost != null)
            {
                <h1 class="mb-3 ">@Model.BlogpPost.Heading</h1>

                <div class="d-flex justify-content-between mb-3">
                    <span class="text-secondary">@Model.BlogpPost.Author</span>
                    <span class="text-secondary">@Model.BlogpPost.PublishDate.ToShortDateString()</span>
                </div>
                <img src="@Model.BlogpPost.FeaturedImageUrl" class="d-block img-fluid mb-3" />
                <div class="mb-3 blog-details">
                    @Html.Raw(Model.BlogpPost.Content)
                </div>
            }
            else
            {
                <h1>Blog Post not Found.</h1>
            }

        </div>
    </div>
</div>

